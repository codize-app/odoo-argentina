<odoo>
    <!-- Inherit the form view of account.payment -->
    <record id="view_account_payment_form_inherited" model="ir.ui.view">
        <field name="name">account.payment.form.inherited</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <form>
                <!-- Fields that should always be invisible -->
                <field name="check_type" invisible="1" />
                <field name="check_subtype" invisible="1" />
                <field name="checkbook_numerate_on_printing" invisible="1" />
            </form>
            <field name='ref' position="after">
                <div colspan="2"
                    invisible="payment_method_code not in ['received_third_check', 'delivered_third_check', 'issue_check']">
                    <group name="checks">
                        <field name="check_id" invisible="check_id == False" />
                        <field name="check_ids"
                            invisible="check_ids == [] or check_id != False or payment_method_code not in ['received_third_check', 'issue_check']">
                            <tree edit="false" create="false">
                                <field name="name" />
                                <field name="payment_date" />
                                <field name="amount" sum="Total" />
                                <field name="state" invisible="1" />
                                <field name="currency_id" invisible="1" />
                            </tree>
                        </field>
                        <label for="check_ids" colspan="2"
                            invisible="payment_method_code != 'delivered_third_check' or payment_type not in ['transfer', 'outbound']" />
                        <field name="check_ids"
                            nolabel="1" colspan="2"
                            options="{'no_create': True}"
                            domain="[('journal_id', '=', journal_id), ('state', '=', 'holding'), ('type', '=', 'third_check')]"
                            invisible="payment_method_code != 'delivered_third_check' or payment_type not in ['transfer', 'outbound']"
                            required="payment_method_code == 'delivered_third_check' and payment_type in ['transfer', 'outbound'] and state != 'cancelled'">
                            <tree edit="false">
                                <field name="name" />
                                <field name="payment_date" />
                                <field name="amount" sum="Total" />
                                <field name="state" invisible="1" />
                                <field name="currency_id" invisible="1" />
                            </tree>
                        </field>
                    </group>
                    <group name="check_data"
                        invisible="payment_method_code not in ['issue_check']">
                        <newline />
                        <field name="checkbook_id" options="{'no_create': True, 'no_open': True}"
                            invisible="payment_method_code not in ['issue_check']"
                            required="payment_method_code in ['issue_check']"
                            domain="[('journal_id', '=', journal_id), ('state', '=', 'active')]" />
                        <field name="check_number"
                            invisible="payment_method_code not in ['received_third_check', 'issue_check']"
                            required="payment_method_code in ['received_third_check', 'issue_check'] and checkbook_numerate_on_printing == False" />
                        <field name="check_name"
                            invisible="payment_method_code not in ['received_third_check', 'issue_check']"
                            required="payment_method_code in ['received_third_check', 'issue_check'] and checkbook_numerate_on_printing == False" />
                        <field name="check_issue_date"
                            invisible="payment_method_code not in ['received_third_check', 'issue_check']"
                            required="payment_method_code in ['received_third_check', 'issue_check']" />
                        <field name="check_payment_date"
                            invisible="payment_method_code not in ['received_third_check', 'issue_check']"
                            required="check_subtype == 'deferred'" />
                        <field name="check_bank_id"
                            invisible="payment_method_code not in ['received_third_check']"
                            required="payment_method_code in ['received_third_check']" />
                        <field name="check_owner_vat"
                            invisible="payment_method_code not in ['received_third_check']"
                            required="payment_method_code in ['received_third_check']" />
                        <field name="check_owner_name"
                            invisible="payment_method_code not in ['received_third_check']"
                            required="payment_method_code in ['received_third_check']" />
                    </group>
                </div>
            </field>
            <label for="amount" position="before">
                <label for="amount"
                    invisible="payment_method_code != 'delivered_third_check'" />
                <div name="readonly_amount_div" class="o_row"
                    invisible="payment_method_code != 'delivered_third_check'">
                    <field name="amount" readonly="True" />
                    <field name="other_currency" />
                    <field name="currency_id" readonly="True" groups="base.group_multi_currency"
                        invisible="other_currency == False" />
                </div>
            </label>
            <label for="amount" position="attributes">
                <attribute name="invisible">payment_method_code == 'delivered_third_check'</attribute>
            </label>
            <div name="amount_div" position="attributes">
                <attribute name="invisible">payment_method_code == 'delivered_third_check'</attribute>
            </div>
            <field name="payment_method_line_id" position="after">
                <field name="check_deposit_type" widget="radio"
                    invisible="payment_type != 'transfer' or payment_method_code != 'delivered_third_check'" />
            </field>
        </field>
    </record>

    <!-- Checks search view -->
    <record id="view_account_payment_search" model="ir.ui.view">
        <field name="name">account.payment.check.search</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="check_ids" />
            </field>
            <xpath expr="//filter[@name='state_sent']" position="before">
                <filter string="Checks To Print and Numerate"
                    domain="[('payment_method_id.code', '=', 'issue_check'), ('state','=','draft'), ('check_name', '=', False)]"
                    name="checks_to_numerate" />
            </xpath>
        </field>
    </record>

</odoo>
