<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_currency_form" model="ir.ui.view">
        <field name="name">res.currency Form</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <field name="l10n_ar_afip_code" position="replace">
                <label for="l10n_ar_afip_code" />
                <div>
                    <field name="l10n_ar_afip_code" />
                    <button name="action_get_pyafipws_currency_rate" string="⇒ Obtener Tasa" type="object" invisible = "not l10n_ar_afip_code or l10n_ar_afip_code == 'PES'" class="oe_link"/>
                    <button name="action_get_pyafipws_currencies" string="⇒ Obtener Información de Monedas" type="object" invisible = "l10n_ar_afip_code != False" class="oe_link"/>
                </div>
            </field>
        </field>
    </record>
</odoo>
