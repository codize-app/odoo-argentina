<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_partner_form" model="ir.ui.view">
			<field name="name">Partner Internal Reference</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<h1 position="after">
					<div class="o_row">
						<group>
							<field name="internal_reference"/>
						</group>
					</div>
				</h1>
				<sheet position="before"><header><button name="update_from_padron" string="Actualizar datos desde AFIP" help="Actualiza los datos del Contacto desde el PadrÃ³n de AFIP." type="object" /></header></sheet>
			</field>
		</record>

		<record id="view_add_state_dept_loc_pac" model="ir.ui.view">
			<field name="name">add.state.loca.tree</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<field name="state_id" position="before">
					<field name="dept_id" class="o_address_dep" placeholder="Partido" options="{'no_create': True, 'no_create_edit': True}" invisible="not state_id"/>
					<field name="loc_id" class="o_address_loc" placeholder="Localidad" options="{'no_create': True, 'no_create_edit': True}" invisible="not dept_id"/>
				</field>
				<field name="city" position="attributes">
					<attribute name="invisible">True</attribute>
				</field>
			</field>
		</record>

		<record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">

            
            <page name="accounting" position="after">
                <page string="Datos Fiscales" name="fiscal_data" 
                      invisible="is_company == False or parent_id != False">
                    <group string="AFIP" name="afip">
                        <group name="afip_col_1">
                            <field name="start_date"/>
                            <!--<field name="last_update_padron"/>-->
                            <field name="estado_padron"/>
                            <field name="imp_ganancias_padron"/>
                            <field name="default_regimen_ganancias_id" 
                                   invisible="imp_ganancias_padron in ['EX', 'NC']"/>
                            <field name="imp_iva_padron"/>
                            <field name="integrante_soc_padron"/>
                            <field name="monotributo_padron"/>
                            <field name="empleador_padron"/>
                        </group>
                        <group name="afip_col_2">
                            <field name="actividad_monotributo_padron"/>
                            <field name="actividades_padron" widget="many2many_tags"/>
                            <field name="impuestos_padron" widget="many2many_tags"/>
                        </group>
                    </group>

                    <group string="Others" name="others">
                        <group name="others_col_1">
                            <label for="gross_income_number" string="Tipo IIBB"/>
                            <div>
                                <field name="gross_income_type" class="oe_inline"/>
                                <field name="gross_income_number" 
                                       placeholder="NÃºmero IIBB..." class="oe_inline"
                                       invisible="gross_income_type not in ['multilateral', 'local']"
                                       required="gross_income_type in ['multilateral', 'local']"/>
                                <field name="gross_income_jurisdiction_ids" 
                                       widget="many2many_tags" 
                                       placeholder="Other Jurisdictions" class="oe_inline"
                                       invisible="gross_income_type != 'multilateral'"/>
                            </div>
                            <field name="drei"/>
                        </group>
                        <!--<group name="others_col_2">
                                <field name="percepciones_ids">
                                        <tree string="Retenciones" editable="bottom">
                                                <field name="tax_id" />
                                        </tree>
                                </field>
                        </group>-->
                    </group>
                </page>
            </page>

           
            <xpath expr="//page[@name='accounting']/group" position="inside">
                <group string="Ingresos Brutos" name="iibb">
                    <field name="iibb_number"/>
                </group>
            </xpath>

        </field>
    </record>
	</data>
</odoo>
